<h1>Meals on Wheels</h1>


<div>
  <h2>Sign up as a restaurant</h2>
  <%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :phone %>
  <%= f.number_field :phone %><br>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.hidden_field(:user_type, value: 'restaurant') %>
  <%= f.submit "new sign up"%>
  <% end %>
</div>


